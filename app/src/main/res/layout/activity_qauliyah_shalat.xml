<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".QauliyahShalatActivity">

    <TextView
        android:id="@+id/tv_sunnah_qauliyah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_menu"
        android:gravity="bottom"
        android:padding="16dp"
        android:text="@string/txt_sunnah_qauliyah_shalat"
        android:textColor="@color/blue"
        android:textSize="24sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_qauliyah_shalat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_sunnah_qauliyah"
        android:layout_marginTop="16dp"
        tools:listitem="@layout/row_item_dzikir"/>
</RelativeLayout>